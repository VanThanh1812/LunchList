<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lunchlist.activity.DetailActivity"
    tools:showIn="@layout/activity_detail">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tab_detail"
            >

            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:text="Name"/>
                <EditText
                    android:id="@+id/edt_name"
                    android:layout_weight="6"
                    android:textSize="18dp"
                    android:hint="Enter name"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </TableRow>


            <TableRow
                android:layout_marginTop="@dimen/marginTop"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:text="Address"/>
                <EditText
                    android:id="@+id/edt_address"
                    android:layout_weight="6"
                    android:textSize="18dp"
                    android:hint="Enter address"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_marginTop="@dimen/marginTop"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:text="Notes"/>
                <EditText
                    android:id="@+id/edt_notes"
                    android:layout_weight="6"
                    android:textSize="18dp"
                    android:hint="Enter notes"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </TableRow>


            <TextView
                android:layout_width="match_parent"
                android:textSize="18dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="Chọn kiểu nhà hàng"/>

            <RadioGroup
                android:id="@+id/rd_typeres"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rd_takeout"
                    android:checked="true"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Take-out"
                    android:layout_weight="1"/>
                <RadioButton
                    android:id="@+id/rd_sitdown"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sit-down"
                    android:layout_weight="1"/>
                <RadioButton
                    android:id="@+id/rd_delivery"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery"
                    android:layout_weight="1"/>
            </RadioGroup>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <Button
                    android:layout_marginTop="@dimen/marginTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textSize="18dp"
                    android:id="@+id/btn_submit"
                    android:onClick="submit"
                    android:textColor="@android:color/white"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:layout_marginTop="@dimen/marginTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View"
                    android:id="@+id/btn_viewlist"
                    android:onClick="viewwlist"
                    android:textColor="@android:color/white"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
            </LinearLayout>
        </TableLayout>
    </ScrollView>
</RelativeLayout>
